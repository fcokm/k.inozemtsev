<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.url">jdbc:hsqldb:mem:test</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="enable_lazy_load_no_trans">true</property>
        <mapping class="ru.job4j.model.part.EngineType" />
        <mapping class="ru.job4j.model.part.EngineVolum" />
        <mapping class="ru.job4j.model.car.Car"/>
        <mapping class="ru.job4j.model.part.MarkCar"/>
        <mapping class="ru.job4j.model.part.CarModel"/>
        <mapping class="ru.job4j.model.dictionary.Colour"/>
        <mapping class="ru.job4j.model.part.Transmission"/>
        <mapping class="ru.job4j.model.part.CarBody"/>
        <mapping class="ru.job4j.model.User"/>
        <mapping class="ru.job4j.model.dictionary.Year"/>
        <mapping class="ru.job4j.model.part.CarCategory"/>
    </session-factory>
</hibernate-configuration>