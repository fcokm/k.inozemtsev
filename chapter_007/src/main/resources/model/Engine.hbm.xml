<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.job4j.model.Engine" table="engine" schema="public"
           catalog="job4j">
        <id name="id">
            <column name="id" sql-type="integer"/>
            <generator class="identity"/>
        </id>
        <property name="name">
            <column name="name"/>
        </property>
        <set name="carSet" inverse="true" lazy="true" cascade="all" fetch="select">
            <key column="engine_id" not-null="true" />
            <one-to-many class="ru.job4j.model.Car" />
        </set>
    </class>
</hibernate-mapping>